
{% extends '/_base.html.twig' %}

{% block pageTitle %}Update Employee Absence{% endblock %}
{% block main %}

    <h1>Add Employee Absence</h1>
    <div class="column_container">
        <form action="" method="post">
            <table>
                     <input type="hidden" name="employeeId" value="{{absence.employeeId}}" >
                <tr>

                    </tr>
                <tr>
                    <td>
                        <label>Start Date:</label>
                    <td>
                        <input type="date" name="startTime"  value="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>EndDate:</label>
                    <td>
                        <input type="text" name="endTime"  class="datepicker" value="{{ absence.endTime|date("Y-m-d") }}">
                    </td>

                </tr>
                <tr>
                    <tr>
                    <td>
                        <label>Reason for Absence:</label>

                    </td>
                        <td>
                    <select name="absenceReason" >
                        {% for absenceReason in absenceReasons%}
                            <option value="{{ absenceReason.refID}}"
                                    {% if (absenceReason.refID== absence.absenceReason) %}
                                        {{ 'selected'}}
                                    {% endif %}>

                                {{ absenceReason.refValue}}</option>
                        {% endfor %}
                    </select>
                        </td>
                </tr>
                <tr>
                <tr>
                    <td></td>
                <td><input type="submit"></td>
                </tr>
            </table>
        </form>
    </div>

{% endblock %}