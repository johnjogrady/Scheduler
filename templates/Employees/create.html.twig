{% extends '/_base.html.twig' %}
{% block pageTitle %}employees Creation  page{% endblock %}
{% block main %}
    <h1>Add a New Employee</h1>
    <div class="column_container">
        <form action="" method="post">
            <table>
                <tr>
                    <td>
                        <label>First Name:</label>
                    </td>
                    <td>
                        <input type="text" name="firstName">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Second Name:</label>
                    </td>
                    <td>
                        <input type="text" name="lastName">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Staff Number:</label>
                    </td>
                    <td>
                        <input type="text" name="staffNumber">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Address Line 1:</label>
                    </td>
                    <td>
                        <input type="text" name="addressLine1">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Address Line 2:</label>
                    </td>
                    <td>
                        <input type="text" name="addressLine2">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Address Line 3:</label>
                    </td>
                    <td>
                        <input type="text" name="addressLine3">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>County:</label>
                    </td>
                    <td>
                        <select name="countyPostcode">
                            {% for county in counties %}
                                <option value="{{ county.refID}}">{{ county.refValue}} </option>
                            {% endfor %}
                        </select>
                        <br>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Eircode:</label>
                    </td>
                    <td>
                        <input type="text" name="eirCode">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Landline Telephone:</label>
                    </td>
                    <td>
                        <input type="text" name="landlineTelephone">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Mobile Telephone:</label>
                    </td>
                    <td>
                        <input type="text" name="mobileTelephone">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Main Contact:</label>
                    </td>
                    <td>
                        <input type="text" name="mainContact">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Managing Office:</label>
                    </td>
                    <td>
                        <select name="managingOffice">

                            {% for office in offices %}
                                <option value="{{ office.id}}">{{ office.officeName}} </option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <br>
                        <input type="submit">
                    </td>
                </tr>
                </section>
            </table>
        </form>
    </div>
{% endblock %}